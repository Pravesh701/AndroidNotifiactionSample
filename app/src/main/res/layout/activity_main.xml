<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_show_basic_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_basic_notification"
        android:background="@android:color/holo_purple"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btn_show_donwloading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_show_basic_notification"
        android:text="@string/show_downloading_bar"
        android:background="@android:color/holo_blue_bright"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="80dp"/>
    <Button
        android:id="@+id/btn_show_full_screen_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_show_donwloading_bar"
        android:text="@string/show_full_screen_notification"
        android:background="@android:color/holo_green_light"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btn_open_notification_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_show_full_screen_notification"
        android:text="@string/show_notification_setting"
        android:background="@android:color/holo_blue_light"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="80dp"/>

</RelativeLayout>